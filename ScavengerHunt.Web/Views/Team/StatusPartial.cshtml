@using ScavengerHunt.Web.Resources
@model ScavengerHunt.Web.Models.Team

<h2>@Model.Name</h2>
<div class="row">
    <div class="col-md-3">
        <b>@Resources.Members</b><br />
        @foreach (var member in Model.Members)
        {
            @member.UserName<br />
        }
    </div>
    <div class="col-md-3">
        <span class="h1">@Model.Score points</span>
    </div>
    <div class="col-md-6">
        <p>
            @String.Format(Resources.TeamStatus, Model.Members.Count, Model.Score, Model.StuntCount)
            @if (Model.BonusPoints != 0)
            {
                <br/>
                @String.Format(Resources.YourBonusPoints, Model.BonusPoints)
            }
        </p>
        <p>@Resources.YourTokenIs <code>@Model.Token</code></p>
    </div>
</div>